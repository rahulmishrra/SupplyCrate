<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/cartprdnamecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="205dp"
                android:text="Product name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cartunitcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="237dp"
                android:text="unit"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cartprdctprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="208dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="\u20B90"
                android:textColor="@color/btcolor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cartprdctctgry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="267dp"
                android:text="Category"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <Button
                android:id="@+id/cartincbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/btcolor"
                android:foreground="@drawable/ic_baseline_add_24" />

            <Button
                android:id="@+id/cartdecbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="10dp"
                android:background="@color/btcolor"
                android:foreground="@drawable/ic_baseline_horizontal_rule_24" />

            <TextView
                android:id="@+id/cartquantitytext"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="false"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cartprdctimgview"
                android:layout_width="match_parent"
                android:layout_height="189dp"
                tools:srcCompat="@drawable/ginger" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>