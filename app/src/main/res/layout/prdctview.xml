<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prdnamecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="205dp"
                android:text="Product name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unitcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="237dp"
                android:text="unit"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/prdstockswitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="258dp"
                android:text=""


                android:textColor="@color/red"
                android:textOff="Out of Stock"
                android:textOn="In Stock" />

            <TextView
                android:id="@+id/prdctpricecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="208dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="\u20B90"
                android:textColor="@color/btcolor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/prdctimgview"
                android:layout_width="match_parent"
                android:layout_height="189dp"
                tools:srcCompat="@drawable/ginger" />

            <TextView
                android:id="@+id/offerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/offerbar"
                android:padding="10dp"
                android:text="5% OFF"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>