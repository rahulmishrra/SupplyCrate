<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/custprdnamecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/custproductimg"
                android:text="Product name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custunitcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="37dp"
                android:layout_toRightOf="@id/custproductimg"
                android:text="unit"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/custprdctpricecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="\u20B90"
                android:textColor="@color/btcolor"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prdctqntycarddetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="67dp"
                android:layout_toRightOf="@id/custproductimg"
                android:text="Category"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/custproductimg"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher" />
            <!--
                        <Button
                            android:id="@+id/addcratebtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="255dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:text="add to crate"
                            android:textSize="12sp"
                            app:backgroundTint="@color/btcolor"
                            app:icon="@drawable/ic_baseline_shopping_cart_24"
                            app:iconGravity="start"
                            app:iconPadding="1dp"
                            app:iconSize="20dp" />-->
